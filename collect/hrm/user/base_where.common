{{ if .exclude }}
and a.userid != {{.exclude}}
{{ end }}

{{  if  .nick }}
and a.nick = {{.nick}}
{{ end }}
{{ if .search }}
and (
    a.nick like {{.search}}
    or a.user_name like {{.search}}
)
{{ end  }}

{{  if  .username }}
and a.user_name = {{.username}}
{{ end }}

{{ if .user_status }}
and a.user_status ={{.user_status}}
{{ end }}
order by a.create_time desc
{{ if  .pagination  }}
limit {{.start}} , {{.size}}
{{ end }}