{
  "services": [
    {
      "node_key": "start",
      "node_type": "start",
      "name": "开始",
      "node_next": "update_user"
    },
    {
      "node_key": "update_user",
      "name": "创建用户信息",
      "node_type": "node",
      "key": "service2field",
      "append_param": true,
      "service": {
        "service": "hrm.update_user_by_user_id"
      },
      "node_fail": "end",
      "node_next": "{{ if .roles }}create_roles{{ else if eq .create_ldap \"1\"}}create_ldap{{ else }}end{{ end }}"
    },
    {
      "node_key": "create_roles",
      "key": "service2field",
      "name": "创建角色",
      "service": {
        "service": "hrm.user_role_bulk_create",
        "user_role_list": "[user_role_list]"
      },
      "node_type": "node",
      "node_next": "{{ if eq .create_ldap \"1\" }} create_ldap {{ else }} end {{ end }}",
      "node_fail": "end"
    },
    {
      "node_key": "create_ldap",
      "node_type": "node",
      "name": "ldap 登陆",
      "key": "service2field",
      "append_param": true,
      "service": {
        "service": "hrm.ldap_add",
        "add_username": "[username]",
        "add_password": "[password]"
      },
      "node_fail": "end",
      "node_next": "end"
    },
    {
      "node_key": "end",
      "node_type": "end",
      "name": "结束"
    }
  ]
}